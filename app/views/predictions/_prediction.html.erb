<div class="panel panel-default predictionContainer" data-prediction-id="<%= prediction.id%>">
    <div class="panel-heading" style="padding:0px 15px; background-color: #EFEFEF">
    <div class="row userInfo" style="height:40px">
        <a href="/users/<%= prediction.user.username%>">
          <img src="<%= avatar_small(prediction.user) %>" style="display:inline-block; height: 40px; width:40px;" />
          <span class="username" style="font-size:1.25em"><%= prediction.user.username %></span>
        </a>
        <div class="col-md-3 myChallenge pull-right">
            <%= display_challenge_icon(prediction) %>
        </div>
    </div>
    <div class="row predictionInfo" style="background-color:white; padding: 8px 20px;">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= prediction.id %>"><%= prediction.body %></a>
    </div>
    <div class="row predictionInfoLine2" style="background-color:white; padding: 5px 20px; color: #77BC1F">
      <%= display_close_status(prediction) %> | predicted <%= distance_of_time_in_words_to_now(prediction.created_at) %> ago | <%= prediction.agree_percentage %>% agree | <%= image_tag("icons/CommentIcon@2x.png") %> <%= prediction.comments.size %>
    </div>    
  </div>
  <div id="collapse<%= prediction.id %>" class="panel-collapse collapse">
    <div class="panel-body">  
      <% if (current_user.id != prediction.user_id) && !prediction.is_expired? && !prediction.is_closed? %>
        <div class="row" style="text-align: center">
          What do you think?
        </div>      
        <div class="row challenge-buttons" style="text-align:center">
          <a href="/prediction/<%= prediction.id %>/agree" class="btn btn-lg btn-success agree <%= active_challenge(prediction, 'agree') %>">Agree</a>
          <a href="/prediction/<%= prediction.id %>/disagree" class="btn btn-lg btn-success disagree <%= active_challenge(prediction, 'disagree') %>">Disagree</a>
        </div>
      <% end %>
      <% if (current_user.id == prediction.user.id) && prediction.is_expired? && !prediction.is_closed? %>
        <div class="row" style="text-align: center">
          Was your prediction correct?
        </div>
        <div class="row" style="text-align:center">
          <a class="btn btn-lg btn-success yes">Yes</a>
          <a class="btn btn-lg btn-success no">No</a>
          <a class="btn btn-lg btn-success remind">Remind Me</a>
        </div>              
      <% end %>
      <% if prediction.is_closed? %>  
        <div class="row prediction_closed"> 
          <div class="col-xs-3 border-right">
            <div style="padding-top:5px;"><%= display_result_outcome_icon(prediction) %></div>
            <div style="padding-top:5px;font-weight:700"><%= display_result_outcome_text(prediction) %></div>
          </div>
          <div class="col-xs-3 border-right">
            <div style="padding-top:5px;font-weight:700;font-size:2.0em"><%= total_points(prediction) %></div>
            <div style="padding-top:0px;margin-top:-5px">points</div>
          </div>
          <div class="col-xs-6">
            <div style="padding-top:5px;">Is this right?</div>
            <div style="padding-top:5px;"><a class="btn btn-lg btn-success bs">Call BS</a></div>
          </div>                              
        </div>
      <% end %>
      <div class="row prediction_tabs">
        <div class="col-xs-2 col-xs-offset-2">
          <a class="comments active"></a>
          <p>COMMENTS</p>
        </div>
        <div class="col-xs-2">
          <a class="tally"></a>
          <p>THE TALLY</p>
        </div>
        <div class="col-xs-2">
          <a href="/predictions?tag=<%=prediction.tags[0]%>" class="similar"></a>
          <p>SIMILAR</p>
        </div>
        <div class="col-xs-2">
          <a class="share" data-toggle="modal" data-target="#sharePrediction" data-remote="/predictions/<%=prediction.id%>/share_dialog"></a>
          <p>SHARE</p>
        </div>                        
      </div>
      <div class="row">
        <div class="comments-content">
          <%= render partial: "predictions/comments", locals: {comments: prediction.comments} %>         
        </div>
        <div class="tally-content" style="display:none">
          Tally ho!
        </div>
      </div>        
    </div>
  </div>
</div>

