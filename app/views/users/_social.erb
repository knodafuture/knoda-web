<% if params[:following]
  title = "FOLLOWING"
  friends = @user.leaders
else
  title = "FOLLOWERS"
  friends = @user.followers
end %>
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <div class="modal-title" id="myModalLabel">
        <%= title %>
      </div>
    </div>
    <div class="modal-body" style="text-align:center">
      <% if current_user == @user %>
      <div class="row">
        <div class="col-xs-12">
          <a href="/friends/find">Knoda is more fun with friends.  Connect to your friends on facebook & twitter</a>
        </div>
      </div>
      <% end %>
      <% friends.each do |user| %>
        <div class="row" style="position:relative;text-align:left;">
          <img src="<%= user.avatar_image[:small] %>" class="img-circle" style="height:36px;width:36px;vertical-align:middle;margin-right:10px;"/>
          <%= user.username %>
          <% if user.followed_by?(current_user) %>
            <a class="btn btn-danger btn-following pull-right" style="position:absolute;right: 5px; top: 5px;" data-id="<%= user.following(current_user).id %>" data-user-id="<%= user.id %>">Following</a>
          <% else %>
            <a class="btn btn-danger btn-follow pull-right" style="position:absolute;right: 5px; top: 5px;"  data-user-id="<%= user.id %>">Follow</a>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Done</button>
    </div>
  </div>
</div>
<script>
  followButtonView.unbindAll();
  followButtonView.bindAll();
</script>
