<div class="row">
  <div class="col-md-6">
    <%= image_tag("screens.png") %>
  </div>
  <div class="col-md-6">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <h2 class="form-signin-heading">Create your Knoda Account</h2>
      <%= devise_error_messages! %>

      <div><%= f.label :username %><br />
      <%= f.text_field :username, :class => 'form-control' %></div>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, :class => 'form-control' %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, :class => 'form-control' %></div>

      <div><%= f.submit "Sign up" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>