<%= simple_form_for @contest_stage, :html=> { class: 'form-horizontal' } do |f| %>
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <div class="modal-title">CREATE A CONTEST STAGE</div>
    </div>
    <div class="modal-body">
      <div class="">
        <div class="form-group">
          <%= text_field_tag :name, nil, placeholder: 'Enter name...'  %>
        </div>
        <div class="form-group">
          <%= text_field_tag :sort_order, nil, placeholder: 'Enter an order number...'  %>
        </div>
      </div>
    </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <%= hidden_field_tag :contest_id, params[:contestid] %>
    <%= button_tag( :Submit , :class => 'btn btn-success') %>
  </div>
</div>

  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
<% end %>
