<%
  explore = explore || false
%>
<div class="row contest-item" data-contest-id="<%= contest.id %>">
  <div class="col-xs-12 center" style="padding: 0px;">
      <div class="row"><div class="col-xs-12">
          <% if contest.avatar_image %>
         <img src="<%= avatar_small(contest) %>" class="avatar_small img-circle avatar-circle" style="height:80px;width:80px;"/>
         <% end %>
         <h2><%= contest.name %></h2>
         <p class="description"><%= contest.description %></p>
      </div></div>
      <div class="row stats">
        <div class="col-xs-4 stats-left" style="text-align: center;  ">
          <% if my_contest_rank(contest) != nil %>
            <p class="stat-value"><%= my_contest_rank(contest) %></p>
            <p class="stat-label">overall (<%= contest.participants %>)</p>
          <% else %>
            <p class="stat-value"><%= contest.participants %></p>
            <p class="stat-label">participants</p>
          <% end %>

          <div class="contest-rank-icon"></div>
        </div>
        <div class="col-xs-6 col-xs-offset-1 stats-right">
          <% if explore %>
            <a class="btn btn-join-contest">Vote on Predictions</a>
          <% else %>
            <% if contest.leader_info %>
              <p class="stat-value"><%= contest.leader_info[:username] %></p>
            <% else %>
              <p class="stat-value">No Leader Yet</p>
            <% end %>
            <p class="stat-label">current contest leader</p>
          <% end %>
        </div>
  </div>
</div>
</div>
