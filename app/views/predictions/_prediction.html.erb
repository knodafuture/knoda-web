<div class="panel panel-default predictionContainer" data-prediction-id="<%= prediction.id%>">
    <div class="panel-heading" style="padding:0px 15px; background-color: #EFEFEF">
    <div class="row userInfo">
        <a href="/users/<%= prediction.user.username%>">
          <img src="<%= avatar_small(prediction.user) %>" style="display:inline-block; height: 47px; width:47px;" />
          <span class="username"><%= prediction.user.username %></span>
          <% if prediction.user.verified_account %>
            <%= image_tag('icons/VerifiedCheckmark.png', {:class => 'verified-account'}) %>
          <% end %>
        </a>
        <div class="col-md-3 myChallenge pull-right">
            <% if (current_user.id == prediction.user_id && prediction.is_expired? && !prediction.is_closed?) %>
              <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= prediction.id %>">
              <%= image_tag('icons/sd/prediction_alert.png', :class => 'pull-right', :style => "margin-top: 12px") %>
              </a>
            <% else %>
            <%= display_challenge_icon(prediction) %>
            <%= display_won_lost(prediction) %>
            <% end %>
        </div>
    </div>
    <div class="row predictionInfo" style="background-color:white; padding: 8px 20px;">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= prediction.id %>" style="width:100%;display:inline-block;"><%= prediction.body %></a>
    </div>
    <div class="row predictionInfoLine2" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= prediction.id %>">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= prediction.id %>" style="width:100%;display:inline-block;"><%= display_close_status(prediction) %> | predicted <%= distance_of_time_in_words_to_now(prediction.created_at) %> ago | <span class="agree-percentage"><%= prediction.agree_percentage %></span>% agree | <%= image_tag("icons/CommentIcon@2x.png") %> <%= prediction.comments.size %></a>
    </div>    
  </div>
  <div id="collapse<%= prediction.id %>" class="panel-collapse collapse <%= collapseState %>">
    <div class="panel-body">  
      <% if (current_user.id != prediction.user_id) && !prediction.is_expired? && !prediction.is_closed? %>
        <div class="row" style="text-align: center">
          What do you think?
        </div>      
        <div class="row challenge-buttons" style="text-align:center">
          <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2">
            <a href="/prediction/<%= prediction.id %>/agree" class="btn btn-lg btn-success agree <%= active_challenge(prediction, 'agree') %>">Agree</a>
            <a href="/prediction/<%= prediction.id %>/disagree" class="btn btn-lg btn-success disagree <%= active_challenge(prediction, 'disagree') %>">Disagree</a>
          </div>
        </div>
      <% end %>
      <% if (current_user.id == prediction.user.id) && prediction.is_expired? && !prediction.is_closed? %>
        <div class="row" style="text-align: center">
          Was your prediction correct?
        </div>
        <div class="row" style="text-align:center;margin-bottom:10px">
          <a class="btn btn-lg btn-success yes" style="width:25%;">Yes</a>
          <a class="btn btn-lg btn-success no" style="width:25%;">No</a>
          <a class="btn btn-lg btn-success remind" style="width:25%;" data-toggle="modal" data-target="#editPrediction_<%= prediction.id %>" data-remote="/predictions/<%= prediction.id %>/edit">IDK Yet</a>
        </div>              
      <% end %>
      <% if prediction.is_closed? %>  
        <div class="row prediction_closed"> 
          <div class="col-xs-3 border-right">
            <div style="padding-top:5px;"><%= display_result_outcome_icon(prediction) %></div>
            <div style="padding-top:5px;font-weight:700"><%= display_result_outcome_text(prediction) %></div>
          </div>
          <div class="col-xs-3 border-right">
            <div style="padding-top:5px;font-weight:700;font-size:2.0em"><%= total_points(prediction) %></div>
            <div style="padding-top:0px;margin-top:-5px">points</div>
          </div>
          <div class="col-xs-6">
            <div style="padding-top:5px;">Is this right?</div>
            <div style="padding-top:5px;"><a class="btn btn-lg btn-success bs">Call BS</a></div>
          </div>                              
        </div>
      <% end %>
      <div class="row prediction_tabs">
        <div class="col-xs-3 col-sm-3 col-md-2 col-md-offset-2">
          <a class="comments active"></a>
          <a class="commentsText"><p>COMMENTS</p></a>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-2">
          <a class="tally"></a>
          <a class="tallyText"><p>THE TALLY</p></a>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-2">
          <a href="/predictions?tag=<%=prediction.tags[0]%>" class="similar"></a>
          <a href="/predictions?tag=<%=prediction.tags[0]%>"><p>SIMILAR</p></a>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-2">
          <a class="share" data-toggle="modal" data-target="#sharePrediction" data-remote="/predictions/<%=prediction.id%>/share_dialog"></a>
          <a data-toggle="modal" data-target="#sharePrediction" data-remote="/predictions/<%=prediction.id%>/share_dialog"><p>SHARE</p></a>
        </div>                        
      </div>
      <div class="row">
        <div class="comments-content">
          <%= render partial: "predictions/comments", locals: {comments: prediction.comments} %>
        </div>
        <div class="tally-content" style="display:none">
        </div>
      </div>        
    </div>
  </div>
</div>
<div class="modal fade" id="editPrediction_<%= prediction.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
