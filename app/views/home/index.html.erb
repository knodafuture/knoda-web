<script>
$(function() {
  homeView = new HomeView({container: $('#home-container'), destination: '<%= @destination || "/predictions" %>'})
  psv = new PredictionSliderView({container: $('.prediction-slider')});
  w = $(window).width()
  if (w < 750) {
    $('#history1').html("<%= escape_javascript(image_tag('home/history/namath_img_sm.jpg')) %>")
    $('#history2').html("<%= escape_javascript(image_tag('home/history/docbrown_img_sm.jpg')) %>")
    $('#history3').html("<%= escape_javascript(image_tag('home/history/bitcoin_img_sm.jpg')) %>")
    $('#history4').html("<%= escape_javascript(image_tag('home/history/goldenglobes_img_sm.jpg')) %>")
    $('#history5').html("<%= escape_javascript(image_tag('home/history/stockmkt_img_sm.jpg')) %>")
  } else if (w < 1050) {
    $('#history1').html("<%= escape_javascript(image_tag('home/history/namath_img_md.jpg')) %>")
    $('#history2').html("<%= escape_javascript(image_tag('home/history/docbrown_img_md.jpg')) %>")
    $('#history3').html("<%= escape_javascript(image_tag('home/history/bitcoin_img_md.jpg')) %>")
    $('#history4').html("<%= escape_javascript(image_tag('home/history/goldenglobes_img_md.jpg')) %>")
    $('#history5').html("<%= escape_javascript(image_tag('home/history/stockmkt_img_md.jpg')) %>")
  }
});

alert(FlurryAgent.logEvent("LANDING"));

</script>
