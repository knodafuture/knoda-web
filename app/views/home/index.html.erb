<% if (@groupInvitation) %>
  <% content_for :head do %>
      <meta property="og:image" content="<%= avatar_big(@group) %>" />
      <meta property="og:title" content="Knoda | <%= @group.name%>" />
      <meta property="og:description" content="<%= @owner.username %> has invited you to join the group <%= @group.name %> on Knoda." />
      <meta property="og:site_name" content="Knoda" />
  <% end %>
  <% title "#{@group.name}" %>
<% else %>
  <% title("Predict Compete Conquer") %>
<% end %>
<% content_for :head do %>
  <%= stylesheet_link_tag "application-home" %>
  <%= javascript_include_tag "home" %>
  <%= javascript_include_tag 'home/animations/vote_on_predictions_edgePreload' %>
  <%= javascript_include_tag 'home/animations/settle_results_edgePreload' %>
  <link href='http://fonts.googleapis.com/css?family=Roboto:300' rel='stylesheet' type='text/css'>
  <style>
    .edgeLoad-EDGE-160599758 { visibility:hidden; }
    .edgeLoad-EDGE-136483370 { visibility:hidden; }
  </style>
<% end %>
<div id="section-1" class="section-1">
  <div class="container-fluid">
    <div class="row header hidden-xs" style="margin-top:10px;margin-bottom: 100px;">
      <div class="col-md-6 col-md-offset-6 col-xs-7 col-xs-offset-5">
        <%= image_tag("knoda_logo.png", :style => "margin:0px;padding:0px;") %>
        <a class="active" href="#section-1">Sign up</a>
        <a class="" href="#section-2">History</a>
        <a class="" href="#section-3">How it works</a>
        <a class="" href="#section-4">Download</a>
      </div>
    </div>
    <div class="row">
      <div class="hidden-xs col-sm-6 col-md-5 col-md-offset-1 hidden-xs">
        <div class="row">
          <div class="col-xs-12">
            <h1>Welcome to Knoda!</h1>
            <p>Knoda is the prediction record book. Predict anything, challenge friends, and prove you are always right.</p>
            <p>Compete against your friends and the rest of the community publicly, or create private groups.  Earn the right to say "I told you so!" when your predictions come true.</p>
          </div>
      </div>
        <div class="row">
          <div class="col-xs-12 appBadges" style="margin-top:20px;">
            <a onclick="ga('send', 'event', 'redirect', 'app_store');" href="https://itunes.apple.com/us/app/knoda/id764642995" target="_blank"><%= image_tag("appStoreBadge.png") %></a>
            <a onclick="ga('send', 'event', 'redirect', 'play_store');" href="https://play.google.com/store/apps/details?id=com.knoda.knoda" target="_blank"><%= image_tag("playStoreBadge.png") %></a>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-5 homeTabs">
        <% if (@groupInvitation) %>
          <p class="invitation-text">
            <%= @owner.username %> has invited you to join the group <span class="group-name"><%= @group.name %></span> on Knoda.<br />To accept the invitation, login or create an account.</p>
        <% end %>
        <%= render partial: "shared/knoda_connect.html.erb", locals: {popup: false}%>
      </div>
    </div>
    <div class="row hidden-xs" style="margin-bottom:20px;margin-top:100px;">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="prediction-slider container-fluid">
          <% @scoredPredictions.each do |p| %>
            <div class="home-prediction">
              <div class="pull-left">
                <img src="<%= p.avatar_image || 'http://placehold.it/50x50' %>"/>
              </div>
              <div class="pull-left detail">
                <div class="row line1"><div class="col-xs-12">
                  <span class="username"><%= p.username %>:</span>
                  <span class="body">"<%= p.body %>"</span>
                </div></div>
                <div class="row line2"><div class="col-xs-12">
                  <span><%= display_close_status(p) %>| <%= p.agree_percentage %>% agree</span>
                </div></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row visible-xs center" style="margin: 20px 0px">
      <div class="col-xs-12 appBadges">
        <div style="margin-bottom: 10px;">
          <a onclick="ga('send', 'event', 'redirect', 'app_store');" href="https://itunes.apple.com/us/app/knoda/id764642995" target="_blank"><%= image_tag("appStoreBadge.png") %></a>
        </div>
        <div>
          <a onclick="ga('send', 'event', 'redirect', 'play_store');" href="https://play.google.com/store/apps/details?id=com.knoda.knoda" target="_blank"><%= image_tag("playStoreBadge.png") %></a>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="section-2">
  <div id="myCarousel" class="carousel slide" data-interval="7000" data-pause="false">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1" class=""></li>
      <li data-target="#myCarousel" data-slide-to="2" class=""></li>
      <li data-target="#myCarousel" data-slide-to="3" class=""></li>
      <li data-target="#myCarousel" data-slide-to="4" class=""></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active">
        <div class="focal-point left-0 down-0">
          <div id="history1"><%= image_tag('home/history/namath_img_lg.jpg') %></div>
        </div>
        <div class="carousel-caption">
          <%= image_tag('home/history/avatars/namath.png') %>
          <p class="date">January 12, 1969</p>
          <h3>"We're going to win Sunday. I guarantee it"</h3>
          <p class="explainer">Joe Namath predicting a Jets upset win over the heavily favored Colts in Super Bowl III</p>
        </div>
      </div>
      <div class="item">
        <div class="focal-point left-0 down-0">
          <div id="history2"><%= image_tag('home/history/docbrown_img_lg.jpg') %></div>
        </div>
        <div class="carousel-caption">
          <%= image_tag('home/history/avatars/docbrown.png') %>
          <p class="date">November 5, 1955</p>
          <h3>"I'm sure that in 1985, plutonium is available in every corner drugstore..."</h3>
          <p class="explainer">Doc Brown predicting the availability of plutonium in the 1980’s</p>
        </div>
      </div>
      <div class="item">
        <div class="focal-point left-0 down-0">
          <div id="history3"><%= image_tag('home/history/bitcoin_img_lg.jpg') %></div>
        </div>
        <div class="carousel-caption">
          <%= image_tag('home/history/avatars/bitcoin.png') %>
          <p class="date">February 5, 2014</p>
          <h3>"Five years from now, in January 2019, 10 percent or more Americans will have used bitcoin to buy something in the past month."</h3>
          <p class="explainer">Ben Horowitz making a prediction on the future of Bitcoin</p>
        </div>
      </div>
      <div class="item">
        <div class="focal-point left-0 down-0">
          <div id="history4"><%= image_tag('home/history/goldenglobes_img_lg.jpg') %></div>
        </div>
        <div class="carousel-caption">
          <%= image_tag('home/history/avatars/goldenglobes.png') %>
          <p class="date">January 13, 2013</p>
          <h3>"Jennifer Lawrence will win the Golden Globe for Best Actress for ‘Silver Linings Playbook’."</h3>
          <p class="explainer">Elena Sheppard accurately predicted all 25 of the 2013 Golden Globe winners</p>
        </div>
      </div>
      <div class="item">
        <div class="focal-point left-0 down-0">
          <div id="history5"><%= image_tag('home/history/stockmkt_img_lg.jpg') %></div>
        </div>
        <div class="carousel-caption">
          <%= image_tag('home/history/avatars/stockmkt.png') %>
          <p class="date">October 26, 1929</p>
          <h3>"Stock prices have reached what seems to be a permanently high plateau."</h3>
          <p class="explainer">Economist Irving Fisher, 3 days before the stock market crash that triggered the Great Depression</p>
        </div>
      </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev"></a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next"></a>
  </div>
</div>
